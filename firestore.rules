rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // üîê HELPER FUNCTIONS
    // ========================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // ========================================
    // üë§ COLLECTION USERS
    // ========================================
    
    match /users/{userId} {
      // Tout utilisateur authentifi√© peut lire n'importe quel profil
      allow read: if isAuthenticated();
      
      // Un utilisateur peut cr√©er/modifier uniquement son propre profil
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
      
      // Un utilisateur peut supprimer uniquement son propre profil
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // ========================================
    // üéâ COLLECTION EVENTS
    // ========================================
    
    match /events/{eventId} {
      // Tout utilisateur authentifi√© peut lire les √©v√©nements
      allow read: if isAuthenticated();
      
      // Tout utilisateur authentifi√© peut cr√©er un √©v√©nement
      allow create: if isAuthenticated() 
        && request.resource.data.organizerId == request.auth.uid;
      
      // Seul l'organisateur peut modifier/supprimer son √©v√©nement
      allow update, delete: if isAuthenticated() 
        && resource.data.organizerId == request.auth.uid;
    }
    
    // ========================================
    // üë• COLLECTION PARTICIPANTS
    // ========================================
    
    match /participants/{participantId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // üìã COLLECTION ACCESS REQUESTS
    // ========================================
    
    match /accessRequests/{requestId} {
      allow read, write: if isAuthenticated();
    }
    
    // ========================================
    // üîî COLLECTION NOTIFICATIONS
    // Mode d√©veloppement : Libre acc√®s en lecture/√©criture
    // ========================================
    
    match /notifications/{notificationId} {
      // Un utilisateur peut lire uniquement ses propres notifications
      allow read: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
      
      // Tout utilisateur authentifi√© peut cr√©er des notifications
      // (pour envoyer des notifs √† d'autres utilisateurs)
      allow create: if isAuthenticated();
      
      // Un utilisateur peut modifier/supprimer uniquement ses propres notifications
      allow update, delete: if isAuthenticated() 
        && resource.data.userId == request.auth.uid;
    }
    
    // ========================================
    // üë• COLLECTION FRIENDSHIPS
    // Mode d√©veloppement : Libre acc√®s
    // ========================================
    
    match /friendships/{friendshipId} {
      // Un utilisateur peut lire les friendships o√π il est impliqu√©
      allow read: if isAuthenticated() 
        && (resource.data.senderId == request.auth.uid 
            || resource.data.receiverId == request.auth.uid);
      
      // Un utilisateur peut cr√©er une friendship o√π il est le sender
      allow create: if isAuthenticated() 
        && request.resource.data.senderId == request.auth.uid;
      
      // Un utilisateur peut modifier/supprimer les friendships o√π il est impliqu√©
      allow update, delete: if isAuthenticated() 
        && (resource.data.senderId == request.auth.uid 
            || resource.data.receiverId == request.auth.uid);
    }
    
// ========================================
// üí¨ COLLECTION CONVERSATIONS (MODE DEV)
// ========================================

match /conversations/{conversationId} {
  allow read, write: if isAuthenticated();
  
  match /messages/{messageId} {
    allow read, write: if isAuthenticated();
  }
}
    
    // ========================================
    // üö´ AUTRES COLLECTIONS
    // Refus par d√©faut pour toute autre collection
    // ========================================
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
